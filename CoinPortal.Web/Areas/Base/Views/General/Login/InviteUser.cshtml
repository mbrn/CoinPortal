    <script>
        jQuery(document).ready(function () {
            var btnInviteUser = $('#btnInviteUser');
            var frmInviteUserNew = $('#frmInviteUserNew');

            btnInviteUser.click(function () {
                frmInviteUserNew.find('.alert-danger').hide();

                var name = frmInviteUserNew.find('#name').val();
                if (name == undefined || name == "" || name == null) {
                    frmInviteUserNew.find('.alert-danger span').text('Lütfen adınızı giriniz.');
                    frmInviteUserNew.find('.alert-danger').show();
                    return false;
                }

                var surname = frmInviteUserNew.find('#surname').val();
                if (surname == undefined || surname == "" || surname == null) {
                    frmInviteUserNew.find('.alert-danger span').text('Lütfen soyadınızı giriniz.');
                    frmInviteUserNew.find('.alert-danger').show();
                    return false;
                }

                var password = frmInviteUserNew.find('#password').val();
                if (password == undefined || password == "" || password == null) {
                    frmInviteUserNew.find('.alert-danger span').text('Lütfen şifreyi giriniz.');
                    frmInviteUserNew.find('.alert-danger').show();
                    return false;
                }

                if (password.length < 6) {
                    frmInviteUserNew.find('.alert-danger span').text('Şifreniz en az 6 karakterden oluşmalıdır.');
                    frmInviteUserNew.find('.alert-danger').show();
                    return false;
                }

                var passwordAgain = frmInviteUserNew.find('#passwordAgain').val();
                if (password != passwordAgain) {
                    frmInviteUserNew.find('.alert-danger span').text('Girdiğiniz şifreler uyuşmuyor. Lütfen kontrol ederek tekrar deneyiniz.');
                    frmInviteUserNew.find('.alert-danger').show();
                    return false;
                }
                
                return true;
            });
        });
    </script>
