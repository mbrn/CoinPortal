<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        @SgHelpers.LogoSetPassword()
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        @if (ViewBag.Status == "NoVerification")
        {
            <form class="login-form">
                <h3 class="form-title font-green">Doğrulama Hatası</h3>
                <div class="alert alert-danger display">
                    <a class="close" data-close="alert"></a>
                    <span>
                        Doğrulama kodu geçersiz
                    </span>
                </div>

                <div class="form-actions">
                    <a href="..\..\" class="btn btn-success pull-right" ><i class="fa fa-home"></i> Ana Sayfa</a>
                </div>
            </form>
        }
        else if (ViewBag.Status == "IsAlreadyConfirmed")
        {
            <form class="login-form">
                <h3 class="form-title font-green">Doğrulama Hatası</h3>
                <div class="alert alert-danger display">
                    <a class="close" data-close="alert"></a>
                    <span>
                        Zaten doğrulama yapılmış
                    </span>
                </div>

                <div class="form-actions">
                    <a href="..\..\" class="btn btn-success pull-right" ><i class="fa fa-home"></i> Ana Sayfa</a>
                </div>
            </form>
        }
        else if (ViewBag.Status == "IsCancelled")
        {
            <form class="login-form">
                <h3 class="form-title font-green">Doğrulama Hatası</h3>
                <div class="alert alert-danger display">
                    <a class="close" data-close="alert"></a>
                    <span>
                        Davetiyeniz iptal edilmiş
                    </span>
                </div>

                <div class="form-actions">
                    <a href="..\..\" class="btn btn-success pull-right"><i class="fa fa-home"></i> Ana Sayfa</a>
                </div>
            </form>
        }
        else if (ViewBag.Status == "NewUser")
        {
            <form class="login-form"  action="../../Base/Login/InviteUser" id="frmInviteUserNew" method="post">
                <h3 class="form-title font-green">Yeni Üyelik</h3>
                <div class="alert alert-danger display-hide no-info">
                    <a class="close" data-close="alert"></a>
                    <span>
                        Lütfen kullanıcı bilgilerinizi giriniz
                    </span>
                </div>
                <input type="hidden" value="@ViewBag.VerificationCode" name="verificationCode" />
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Ad</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Ad" id="name" name="name"
                           style="-webkit-box-shadow: 0 0 0px 1000px #dde3ec inset;" />
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Soyad</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Soyad" id="surname" name="surname"
                           style="-webkit-box-shadow: 0 0 0px 1000px #dde3ec inset;" />
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Şifre</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre" id="password" name="password"
                           style="-webkit-box-shadow: 0 0 0px 1000px #dde3ec inset;" />
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Şifre Tekrar</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre Tekrar" id="passwordAgain" name="passwordAgain"
                           style="-webkit-box-shadow: 0 0 0px 1000px #dde3ec inset;" />
                </div>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit" id="btnInviteUser">Kaydet</button>
                </div>
            </form>
        }
        else if (ViewBag.Status == "Confirmed")
        {
            <form class="login-form">
                <h3 class="form-title font-green">Üyelik Onayı</h3>
                <div class="alert alert-success display">
                    <a class="close" data-close="alert"></a>
                    <span>
                        Tebrikler! @ViewBag.TenantName ağına üyeliğiniz aktifleştirildi
                    </span>
                </div>
                <div class="form-actions">
                    <a href="..\..\" class="btn btn-success pull-right"><i class="fa fa-home"></i> Ana Sayfa</a>
                </div>
            </form>
        }
    </div>
