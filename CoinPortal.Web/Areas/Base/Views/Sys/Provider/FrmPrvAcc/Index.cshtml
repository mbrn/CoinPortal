@using Devia.Sigma.Business.Sys.Provider.Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Base/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <a id="btnFrmPrvAccSave" class="btn blue-madison">@Html.Sigma().Icon("f0c7") Kaydet</a>
                    <a id="btnFrmPrvAccUpdate" class="btn blue-madison disabled">@Html.Sigma().Icon("f021") Güncelle</a>
                    <a id="btnFrmPrvAccDelete" class="btn red-sunglo disabled">@Html.Sigma().Icon("f00d") Sil</a>
                    <a id="btnFrmPrvAccClear" class="btn btn-default">@Html.Sigma().Icon("f1f8") Temizle</a>
                </div>
            </div>
            <div class="portlet-body form">
                <form role="form" id="frmFrmPrvAcc">
                    <div class="form-body">
                        @SgHtml.TextBox("Guid", "Guid", "col-md-6 display-hide", "Guid", 50, "text", "")
                        @SgHtml.CheckBox("Status", "Status", "col-md-6 display-hide")
                        @SgHtml.TextBox("Lastupdated", "Lastupdated", "col-md-6 display-hide", "Lastupdated", 16, "numeric", "")
                        @SgHtml.TextBox("AccId", "AccId", "col-md-6  display-hide", "AccId", 19, "numeric", "disabled")
                        @SgHtml.TextBox("PrvType", "PrvType", "col-md-6  display-hide", "PrvType", 3, "text", "")
                        <div class="form-group col-md-6">
                            <label class="control-label">Hesap Adý</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="AccName" name="AccName" placeholder="Hesap Adý">
                                <span class="input-group-btn">
                                    <button class="btn btn-default SearchAccount" type="button"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                        @SgHtml.ComboBox("PrvId", "Provider", FrmPrv.SelectAll().ToDictionary(a => a.PrvId.ToString(), a => a.PrvKey), "col-md-4")
                        @SgHtml.CheckBox("IsDefault", "Varsauyýlan", "col-md-2 ")
                        <div class="form-group col-md-3 ">
                            <label class="control-label">Tarih Aralýðý</label>
                            <div class="input-icon">
                                <i class="fa fa-calendar"></i>
                                <input type="text" id="dateRange" name="dateRange" class="form-control">
                            </div>
                        </div>
                    </div>
                </form>

                <div class="clearfix"></div>
                <!-- Grid -->

                <div class="clearfix"></div>
            </div>
          
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <h4 class="modal-title">Hesap Alanlarý</h4>
                </div>
            </div>
            <div class="portlet-body form">
                <form role="form" id="frmFrmPrvAccFld">
                    <div class="form-body">
                        <div id="dynamicFields" name="dynamicFields" />

                    </div>
                </form>
                <div class="clearfix"></div>
                <!-- Grid -->
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
<div id="modalFormProviderAccounts" class="modal fade bs-modal-lg" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Hesap Ara</h4>
            </div>
            <div class="modal-body">
                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto;">
                    <div class="scroller" style="overflow: hidden; width: auto;" data-always-visible="1" data-rail-visible1="1" data-initialized="1">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="tblFrmPrvAcc" class="table table-striped table-hover table-bordered dataTable no-footer table-checkable" cellspacing="0" role="grid" aria-describedby="tblFrmPrvAcc_info"></table>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(187, 187, 187);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(234, 234, 234);"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnActMrcCancel" type="button" data-dismiss="modal" class="btn btn-default">Ýptal</button>
            </div>
        </div>
    </div>
</div>

@section pageScript
{
    <script src="~/Areas/Base/Scripts/Sys/Provider/FrmPrvAcc.js"></script>
}
