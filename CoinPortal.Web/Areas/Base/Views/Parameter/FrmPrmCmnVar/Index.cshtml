
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Base/Views/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <a id="btnFrmPrmCmnVarAdd" class="btn green">@Html.Sigma().Icon("f067") Ekle</a>
                </div>
                <div class="actions"></div>
            </div>
            <div class="portlet-body">
                <table id="tblFrmPrmCmnVar" class="table table-striped table-hover table-bordered dataTable no-footer" cellspacing="0" role="grid" aria-describedby="tblFrmPrmCmnVar_info"></table>
                <div class="clearfix"></div>

                <div id="modalFormFrmPrmCmnVar" class="modal fade bs-modal-lg" tabindex="-1" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a class="close" data-dismiss="modal" aria-hidden="true"></a>
                                <h4 class="modal-title">FrmPrmCmnVar</h4>
                            </div>
                            <div class="modal-body">
                                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto;">
                                    <div class="scroller" style="overflow: hidden; width: auto;" data-always-visible="1" data-rail-visible1="1" data-initialized="1">
                                        <div class="row">
                                            <form role="form" id="frmFrmPrmCmnVar">
                                                <div class="form-body">
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Guid</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Guid" name="Guid" placeholder="Guid" maxlength="50">
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Status</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="checkbox" class="form-control" id="Status" name="Status" placeholder="Status" maxlength="1" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Lastupdated</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Lastupdated" name="Lastupdated" placeholder="Lastupdated" maxlength="16" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-4 ">
                                                        <label class="control-label">Değişken Tipi</label>
                                                        <select class="form-control select2" id="VarTyp" name="VarTyp" data-placeholder="Değişken Tipi" aria-hidden="true">
                                                            <option value="boolean">Boolean</option>
                                                            <option value="decimal">Decimal</option>   
                                                            <option value="string">String</option>
                                                            <option value="html">Html</option>                                                         
                                                            <option value="date">Date</option>
                                                            <option value="time">Time</option>
                                                            <option value="datetime">DateTime</option>
                                                        </select>
                                                    </div>

                                                    <div class="form-group col-md-4 ">
                                                        <label class="control-label">Değişken Adı</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="VarKey" name="VarKey" placeholder="Değişken Adı" maxlength="100">
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-4 ">
                                                        <label class="control-label">Açıklama</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Description" name="Description" placeholder="Açıklama" maxlength="500">
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-12">
                                                        <div id="value-container-boolean" hidden>
                                                            <label class="control-label">Değer (Boolean)</label>
                                                            <div class="input-icon right">
                                                                <input type="checkbox" class="make-switch" id="value-boolean" name="value-boolean" data-on-text="<span class='fa fa-check fa-check'></span>" data-off-text="<span class='fa fa-times'></span>">
                                                            </div>
                                                        </div>
                                                        <div id="value-container-decimal" hidden>
                                                            <label class="control-label">Değer (Decimal)</label>
                                                            <div class="input-icon right">
                                                                <i class="fa"></i>
                                                                <input type="text" class="form-control" id="value-decimal" name="value-decimal" placeholder="Sayısal" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                                                            </div>
                                                        </div>
                                                        <div id="value-container-string" hidden>
                                                            <label class="control-label">Değer (String)</label>
                                                            <div class="input-icon right">
                                                                <i class="fa"></i>
                                                                <input type="text" class="form-control" id="value-string" name="value-string" placeholder="Metin" maxlength="65535">
                                                            </div>
                                                        </div>
                                                        <div id="value-container-html" hidden>
                                                            <label class="control-label">Değer (Html)</label>
                                                            <div id="value-html" name="value-html" style="display: none;"> </div>
                                                        </div>

                                                        <div id="value-container-date" hidden>
                                                            <label class="control-label">Değer (Date)</label>
                                                            <input class="form-control form-control-inline date-picker" size="16" id="value-date" name="value-date" type="text" placeholder="Tarih">
                                                        </div> 
                                                        
                                                        <div id="value-container-time" hidden>
                                                            <label class="control-label">Değer (Time)</label>
                                                            <div class="input-group">
                                                                <input type="text" class="form-control timepicker timepicker-24" id="value-time" name="value-time" placeholder="Saat">
                                                                <span class="input-group-btn">
                                                                    <a class="btn default"><i class="fa fa-clock-o"></i></a>
                                                                </span>
                                                            </div>    
                                                        </div>   
                                                        
                                                        <div id="value-container-datetime" hidden>
                                                            <label class="control-label">Değer (Date - Time)</label>
                                                            <div class="row">
                                                                <div class="col-md-6 col-sm-6">
                                                                    <input class="form-control  form-control-inline date-picker" size="16" id="value-datetime-date" name="value-datetime-date" type="text" placeholder="Tarih">
                                                                </div>
                                                                <div class="input-group col-md-6 col-sm-6">
                                                                    <input type="text" class="form-control timepicker timepicker-24" id="value-datetime-time" name="value-datetime-time" placeholder="Saat">
                                                                    <span class="input-group-btn">
                                                                        <a class="btn default"><i class="fa fa-clock-o"></i></a>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>                                                    
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                    <div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(187, 187, 187);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(234, 234, 234);"></div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a id="btnFrmPrmCmnVarCancel" data-dismiss="modal" class="btn btn-default">İptal</a>
                                <a id="btnFrmPrmCmnVarSave" class="btn blue-madison">@Html.Sigma().Icon("f0c7") Kaydet</a>
                                <a id="btnFrmPrmCmnVarUpdate" class="btn blue-madison">@Html.Sigma().Icon("f021") Güncelle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>

@section pageScript
{
    <script src="~/Areas/Base/Scripts/Parameter/FrmPrmCmnVar.js"></script>
}