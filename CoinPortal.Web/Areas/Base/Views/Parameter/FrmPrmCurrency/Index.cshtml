@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Base/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <a id="btnFrmPrmCurrencyAdd"class="btn green">@Html.Sigma().Icon("f067") Ekle</a>
                </div>
                <div class="actions"></div>
            </div>
            <div class="portlet-body">
                <table id="tblFrmPrmCurrency" class="table table-striped table-hover table-bordered dataTable no-footer" cellspacing="0" role="grid" aria-describedby="tblFrmPrmCurrency_info"></table>
                <div class="clearfix"></div>

                <div id="modalFormFrmPrmCurrency" class="modal fade bs-modal-lg"   aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a class="close" data-dismiss="modal" aria-hidden="true"></a>
                                <h4 class="modal-title">Para Birimi</h4>
                            </div>
                            <div class="modal-body">
                                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto;">
                                    <div class="scroller" style="overflow: hidden; width: auto;" data-always-visible="1" data-rail-visible1="1" data-initialized="1">
                                        <div class="row">
                                            <form role="form" id="frmFrmPrmCurrency">
                                                <div class="form-body">
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Guid</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Guid" name="Guid" placeholder="Guid" maxlength="50">
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Status</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="checkbox" class="form-control" id="Status" name="Status" placeholder="Status" maxlength="1" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-6 display-hide">
                                                        <label class="control-label">Lastupdated</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Lastupdated" name="Lastupdated" placeholder="Lastupdated" maxlength="16" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-6 ">
                                                        <label class="control-label">Birim Kodu</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="CurrencyCode" name="CurrencyCode" placeholder="Birim Kodu" maxlength="3">
                                                        </div>
                                                    </div>
                                                    @*<div class="form-group col-md-6 ">
                                                        <label class="control-label">Icon</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <select class="form-control " id="IconCode" name="IconCode" placeholder="Icon" style="font-family: 'FontAwesome', 'Helvetica';">
                                                                <option value=""></option>
                                                                <option value="f153">&#xf153; EUR</option>
                                                                <option value="f195">&#xf195; TRY</option>
                                                                <option value="f154">&#xf154; GBP</option>
                                                                <option value="f155">&#xf155; USD</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                        *@
                                                    @SgHtml.FontawesomeCombo("IconCode", "İkon", "col-md-6 ")


                                                    <div class="form-group col-md-6 ">
                                                        <label class="control-label">Adı</label>
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Adı" maxlength="100">
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                    <div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(187, 187, 187);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(234, 234, 234);"></div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a id="btnFrmPrmCurrencyCancel"data-dismiss="modal" class="btn btn-default">İptal</a>
                                <a id="btnFrmPrmCurrencySave"class="btn blue-madison">@Html.Sigma().Icon("f0c7") Kaydet</a>
                                <a id="btnFrmPrmCurrencyUpdate"class="btn blue-madison">@Html.Sigma().Icon("f021") Güncelle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>

@section pageScript
{
    <script src="~/Areas/Base/Scripts/Parameter/FrmPrmCurrency.js"></script>
}
