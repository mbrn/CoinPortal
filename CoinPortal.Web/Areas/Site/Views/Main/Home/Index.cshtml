
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Site/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <style>
        @@media (min-width: 768px) {
            .m-portlet.no-bottom-margin {
                margin-bottom: 0px;
            }
        }
        .m-widget4 .m-widget4__item .m-widget4__info {
            padding-left: 0px;
        }
    </style>
    <div class="col-xl-4">
        <!--begin:: Widgets/Sales Stats-->
        <div class="m-portlet m-portlet--bordered-semi m-portlet--half-height m-portlet--fit no-bottom-margin" style="min-height: 300px">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Market Hacmi
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="nav nav-pills nav-pills--success m-nav-pills--align-right m-nav-pills--btn-pill m-nav-pills--btn-sm" role="tablist">
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link active" data-toggle="tab" href="#m_widget4_tab1_content" role="tab">
                                Aylık
                            </a>
                        </li>
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_widget4_tab2_content" role="tab">
                                Tümü
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin::Widget5-->
                <div class="m-widget20">
                    <div id="totalMarketCap1" class="m-widget20__number m--font-success">
                        -
                    </div>
                    <div class="m-widget20__chart" style="height:160px;">
                        <canvas id="m_chart_bandwidth1"></canvas>
                    </div>
                </div>
                <!--end::Widget 5-->
            </div>
        </div>
        <!--end:: Widgets/Sales Stats-->
    </div>
    <div class="col-xl-4">
        <!--begin:: Widgets/Authors Profit-->
        <div class="m-portlet m-portlet--bordered-semi m-portlet--half-height  m-portlet--fit no-bottom-margin" style="min-height:300px;">
            <div class="m-portlet__body">
                <div class="m-widget4">
                    <div class="m-widget4__item">
                        <div class="m-widget4__img m-widget4__img--logo">
                            <img src="assets/app/media/img/client-logos/logo5.png" alt="">
                        </div>
                        <div class="m-widget4__info">
                            <span class="m-widget4__title">
                                Market Hacmi
                            </span>
                        </div>
                        <span class="m-widget4__ext">
                            <span id="totalMarketCap2" class="m-widget4__number m--font-brand">
                                -
                            </span>
                        </span>
                    </div>
                    <div class="m-widget4__item">
                        <div class="m-widget4__img m-widget4__img--logo">
                            <img src="assets/app/media/img/client-logos/logo5.png" alt="">
                        </div>
                        <div class="m-widget4__info">
                            <span class="m-widget4__title">
                                24S Hacim
                            </span>
                        </div>
                        <span class="m-widget4__ext">
                            <span id="volume24h" class="m-widget4__number m--font-brand">
                                -
                            </span>
                        </span>
                    </div>
                    <div class="m-widget4__item">
                        <div class="m-widget4__img m-widget4__img--logo">
                            <img src="assets/app/media/img/client-logos/logo5.png" alt="">
                        </div>
                        <div class="m-widget4__info">
                            <span class="m-widget4__title">
                                Bitcoin Market Oranı
                            </span>
                        </div>
                        <span class="m-widget4__ext">
                            <span id="bitcoinDominance" class="m-widget4__number m--font-brand">
                                -
                            </span>
                        </span>
                    </div>
                    <div class="m-widget4__item">
                        <div class="m-widget4__img m-widget4__img--logo">
                            <img src="assets/app/media/img/client-logos/logo5.png" alt="">
                        </div>
                        <div class="m-widget4__info">
                            <span class="m-widget4__title">
                                Sanal Paralar
                            </span>
                        </div>
                        <span class="m-widget4__ext">
                            <span id="activeCryptoCurrencies" class="m-widget4__number m--font-brand">
                                -
                            </span>
                        </span>
                    </div>
                    <div class="m-widget4__item">
                        <div class="m-widget4__img m-widget4__img--logo">
                            <img src="assets/app/media/img/client-logos/logo5.png" alt="">
                        </div>
                        <div class="m-widget4__info">
                            <span class="m-widget4__title">
                                Borsalar
                            </span>
                        </div>
                        <span class="m-widget4__ext">
                            <span id="activeMarkets" class="m-widget4__number m--font-brand">
                                -
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!--end:: Widgets/Authors Profit-->
    </div>
    <div class="col-xl-4">
        <!--begin:: Widgets/Outbound Bandwidth-->
        <div class="m-portlet m-portlet--bordered-semi m-portlet--half-height m-portlet--fit no-bottom-margin" style="min-height: 300px">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Bitcoin Fiyatı ($)
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="nav nav-pills nav-pills--warning m-nav-pills--align-right m-nav-pills--btn-pill m-nav-pills--btn-sm" role="tablist">
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link active" data-toggle="tab" href="#m_widget4_tab1_content" role="tab">
                                Aylık
                            </a>
                        </li>
                        <li class="nav-item m-tabs__item">
                            <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_widget4_tab2_content" role="tab">
                                Tümü
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin::Widget5-->
                <div class="m-widget20">
                    <div id="bitcoinPrice" class="m-widget20__number m--font-warning">
                        -
                    </div>
                    <div class="m-widget20__chart" style="height:160px;">
                        <canvas id="m_chart_bandwidth2"></canvas>
                    </div>
                </div>
                <!--end::Widget 5-->
            </div>
        </div>
        <!--end:: Widgets/Outbound Bandwidth-->
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <!--begin:: Widgets/Application Sales-->
        <div class="m-portlet m-portlet--full-height ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Tüm Sanal Paralar
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                </div>
            </div>
            <div class="m-portlet__body" style="padding:0px 0px 31px 0px;">
                <style>
                    #allCoinsTable .m-datatable__pager {
                        padding: 0px 20px 0px 20px;
                    }
                </style>
                <div class="m_datatable" id="allCoinsTable"></div>
            </div>
        </div>
        <!--end:: Widgets/Application Sales-->
    </div>
</div>
<!--End::Section-->

@section pageScript{
    <script src="~/Areas/Site/Scripts/Main/Home.js"></script>
}

